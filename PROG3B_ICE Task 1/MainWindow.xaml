<Window x:Class="PROG3B_ICE_Task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG3B_ICE_Task_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="441" Width="531">
    <Grid Margin="81,8,92,-8">
        <Label x:Name="label" Content="Word Game" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" Width="140" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="label1" Content="Type Your Answer Below:" HorizontalAlignment="Center" Margin="0,106,0,0" VerticalAlignment="Top" Width="144" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="140" TextChanged="textBox_TextChanged" Height="24"/>
        <Button x:Name="button" Content="PLAY" HorizontalAlignment="Left" Margin="64,270,0,0" VerticalAlignment="Top" Width="90" BorderBrush="#FF162F7D" Height="33" Click="Playbutton_Click"/>
        <Button x:Name="button_Copy" Content="CHECK" HorizontalAlignment="Left" Margin="206,270,0,0" VerticalAlignment="Top" Width="90" BorderBrush="#FF162F7D" Height="33" Click="button_Copy_Click"/>

    </Grid>
</Window>
